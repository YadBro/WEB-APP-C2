{{>header }}

{{>navbar }}
{{#if messages.errorLoginMessage }}
<div class="alert alert-warning" role="alert">
    <div class="container">
        <small class="fs-5">{{messages.errorLoginMessage}}</small>
    </div>
</div>
{{/if }}

{{#if messages.successRegisterMessage }}
<div class="alert alert-success" role="alert">
    <div class="container">
        <small class="fs-5">{{messages.successRegisterMessage}}</small>
    </div>
</div>
{{/if }}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center mt-5 font-weight-bold">LOGIN TO YOUR ACCOUNT</h3>
            <form action="/login" method="post">
                <div class="mb-3 mt-5">
                    <label for="inputEmail" class="form-label fs-5">Email</label>
                    <input required value="{{ oldValueEmailLogin }}" name="inputEmail" type="email" class="form-control rounded-3 shadow pt-3 pb-3" autocomplete="true"
                        id="inputEmail">
                </div>
                <div class="mb-3 mt-5">
                    <label for="inputPassword" class="form-label fs-5">Password</label>
                    <input required name="inputPassword" type="password" class="form-control rounded-3 shadow pt-3 pb-3" autocomplete="true"
                        id="inputPassword">
                </div>
                <div class="contact-me-button float-end rounded-pill pt-2 pb-2 pe-3 ps-3">
                    <!-- onclick="addBlog(event)"
                    -->
                    <button type="submit" class="text-white pe-2 ps-2">submit</button>
                </div>
            </form>
        </div>
    </div>
</div>